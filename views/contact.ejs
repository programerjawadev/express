<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar contact</h2>
      <a href="/contact/add" class="btn btn-primary mb-2">Tambah data contact</a>
      <table class="table">

        <% if (msg.length != 0) { %>
         <div class="alert alert-success" role="alert">
          <%= msg %>
        </div>
        <% } %>
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nama</th>
      <th scope="col">No HP</th>
      <th scope="col">Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% if (contacts.length < 1) { %>
      <div class="alert alert-danger fw-bold" role="alert">
          Data Contact Masih kosong<br>
          <a href="/contact" class="alert-link fw-normal">&laquo;Kembali ke daftar contact.</a>
      </div>
    <% } %>
    <% contacts.forEach((c,i)=> {i++ %>

      <tr>
        <th scope="row"><%=i%></th>
        <td><%= c.nama %></td>
        <td><%= c.nohp %></td>
        <td><a href="/contact/<%=c.nama%>"class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i> detail</a></td>
      </tr>
      
    <% }) %>
  </tbody>
</table>
    </div>
  </div>
</div>
